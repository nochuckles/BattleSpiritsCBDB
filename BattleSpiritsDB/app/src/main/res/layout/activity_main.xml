<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/digimonlogo2" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/DashboardNewPost"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:layout_marginTop="28dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/patamon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:src="@drawable/menu1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/card_list"
                        android:textStyle="bold"
                        android:fontFamily="@font/digimon_basic"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:layout_marginTop="16dp"
                        android:textColor="@android:color/black"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/DashboardPostsList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:layout_marginTop="28dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/angemon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:src="@drawable/menu2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/inventory"
                        android:textStyle="bold"
                        android:fontFamily="@font/digimon_basic"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:layout_marginTop="16dp"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/DashboardCommentsList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:layout_marginTop="28dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/magnaangemon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:src="@drawable/menu3" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cards_left"
                        android:textStyle="bold"
                        android:fontFamily="@font/digimon_basic"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:layout_marginTop="16dp"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/DashboardBlogParameters"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:layout_marginTop="28dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/seraphimon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:src="@drawable/menu4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/search"
                        android:textStyle="bold"
                        android:fontFamily="@font/digimon_basic"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:layout_marginTop="16dp"
                        android:textColor="@android:color/black"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>




</LinearLayout>